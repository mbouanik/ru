
<div id="attendee<%=attendee.id%>">



	<div class="row" >
	    <div class="col s12 m6">
	      <div class="card blue-grey darken-1">
	        <div class="card-content white-text">
	          <span class="card-title"><%= attendee.name %></span>
	          <%= link_to (image_tag  "https://cdn.intra.42.fr/users/medium_#{ attendee.login }.jpg", width: '128', class: "circle responsive-img"), attendee  %>
			  <%=link_to (attendee.login), attendee %>
			  <% @time = Stamp.where(:attendee_id => attendee.id).last %>
			  <% if @time %>
			  <div class="right">
			 	<p>Sign in: <%= @time.sign_in.strftime "%B %e at %l:%M %p" unless @time.sign_in.nil? %> </p>
				<p >Sign out: <%= @time.sign_out.strftime "%B %e at %l:%M %p" unless @time.sign_out.nil? %> </p>
				 </div>
			  <% else %>
			  	<%= "No time logged yet" %>
			  <% end %>
			</div>
	        <div class="card-action">
	         <button data-target="modal_attendee<%=attendee.id%>" data-toggle='modal' class="btn modal-trigger">Edit</button>
	          <%= link_to 'Destroy', attendee, method: :delete,  remote: true, class: 'waves-effect waves-light btn red'%>
	        </div>
	      </div>
	    </div>
	  </div>

</div>



  	  <%= form_for(attendee, :method => :put, remote: true) do |form| %>
	  <div class="modal" id="modal_attendee<%=attendee.id%>">
	  <div class="modal-content">
  	    <div class="input-field">
  		<%= form.text_field :name, class: 'attendee_name'  %>
  	   <%= form.label :name, class: :active%>
  	  </div>

  	  <div class="input-field">
  		<%= form.text_field :login, class: 'attendee_login' %>
  	   <%= form.label :login, class: 'active' %>
  	  </div>

  	 	<div class="waves-effect waves-light btn purple darken-4">
  			<%= form.submit "Add/Update Attendee", class: "modal-close  white-text" %>
  	  	</div>
		</div>
	</div>
	<% end %>
