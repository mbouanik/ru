 <div class="attendee_card" id="attendee<%=attendee.id%>">
	<div class="row">
		<div class="col s1 m12">
			<div class="card_attendee card small z-depth-3">
				<span class="row right">
					<%= link_to 'close', attendee, method: :delete,  remote: true, class: 'material-icons destroy-close'%>
				</span>
				<div class="card-content white-text card-block">
					<div class="container center picture-index picture-hover">
						<%= link_to (image_tag  "https://cdn.intra.42.fr/users/medium_#{ attendee.login }.jpg",  class: 'picture-index'), attendee  %>
					</div>
					<div class="card-title login-link">
						<%= attendee.name %>
						<!-- <%=link_to (attendee.login), attendee, class: "login-link" %> -->
					</div>
					<hr>
					<%= get_pos(attendee.login) %>
					<% @stamps = Stamp.where(:attendee_id => attendee.id).last %>
					<table class="white-text centered">
						<!-- <div class=""> -->
							<thead class="">
								<tr>
									<th class="time-stamps-index-sign-in" id="sign_in_title" >Sign in</th>
									<th class="time-stamps-index-sign-out" >Sign out</th>
									<th colspan="2"></th>
								</tr>
							</thead>
						<!-- </div> -->
					</table>
					<table>
						<span class="sign_in<%=attendee.id%>">
							<% if @stamps.nil? %>
								<td class="center">
									<%= "No time logged Yet" %>
								</td>
							<% else %>
								<%= render @stamps %>
							<% end %>
						</span>
					</table>
				</div>
				<div class="card-action card-action-index ">
					<div class="btn-action-index btn-action-index">
						<a class="newwaves-effect waves-light btn modal-trigger purple lighten-2 btn-action" href="#modal-attendee<%=attendee.id%>">
							History
						</a>
						<% if @stamps.nil? || !@stamps.sign_out.nil?%>
							<span id="time<%=attendee.id %>" >
								<%= link_to 'Add TimeStamp', sign_in_path(attendee_id: attendee.id), class: 'waves-effect waves-light btn blue darken-2', remote: true %>
							</span>
							<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% @stamps = Stamp.where(:attendee_id => attendee.id).order("created_at DESC").page().per(10)%>
	<div class="modal" id="modal-attendee<%=attendee.id%>" >
		<div class="modal-dialog">
			<div class="modal-content time-stamps">
				<div class="modal-header white-text">
					<div class="card-title">
						<%= attendee.name%>'s History
					</div>
				</div>
				<% if !@stamps.present? %>
					<p class="white-text center no-time-logged">
						<%= " No time logged yet" %>
					</p>
				<% else %>
					<table class="white-text centered">
						<thead class="">
							<tr>
								<th class="time-stamps-index-sign-in" id="sign_in_title" >Sign in</th>
								<th class="time-stamps-index-sign-out" >Sign out</th>
								<th colspan="2"></th>
							</tr>
						</thead>
					</table>
				<% end %>
				<div class="modal-body sign_in<%=attendee.id%>" id="stamps" >
					<%= render @stamps %>
				</div>
			</div>
		</div>
	</div>
</div>
