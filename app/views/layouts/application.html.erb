<!DOCTYPE html>
<html>
	<head>
		<link href="https://profile.intra.42.fr/assets/42_logo_black-684989d43d629b3c0ff6fd7e1157ee04db9bb7a73fba8ec4e01543d650a1c607.png" rel="icon" type="image/svg">
		<title>
			Queen Ru
		</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
		<!--Import Google Icon Font-->
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	</head>
	<body>
		<% if action_name == "index" || action_name== 'show' || action_name== 'search'%>
		<span>
			<a href="#" data-target="slide-out" class="left sidenav-trigger"><i class="material-icons">menu</i></a>
			<a href="/" class="brand-logo nav-block" >
				<img onclick="location.reload(false)"  src="/assets/42-logo" alt="42" height="42px">
			</a>
			<% if current_user %>
				<span class='white-text logged-as right'>
					<span class="logged-as-picture">
						<% if current_user.nickname == "rliu" %>
							<span><%= image_tag 'login-display.gif' , width: 64%></span>
						<% end %>
					</span>

					Logged as
					<span class="logged-as-nickname">
						<%= current_user.nickname unless current_user.nil? %>
					</span>
				</span>
			<% end %>
		</span>

			<ul id="slide-out" class="sidenav">
				<li>
					<div class="user-view">
						<div class="background">
							<img src="/assets/42-logo" alt="42" height="25px">
						</div>
						<%= image_tag  "https://cdn.intra.42.fr/users/medium_#{ current_user.nickname }.jpg", class: 'picture-index'%>
						<span class="white-text name"><%=  current_user.nickname %></span>
						<span class="white-text email"><%= current_user.email %></span>
					</div>
				</li>
				<li class=" sign-out-button center">
					<%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "white-text" %>
				</li>
				<% if current_user.nickname == "rliu" %>
					<span class="center"><%= image_tag 'wow.gif' , width: 128%></span>
				<% end %>

			</ul>

		<% end %>
		<main>
			<div class="container">
				<%= yield %>
			</div>
		</main>

	</body>
</html>
